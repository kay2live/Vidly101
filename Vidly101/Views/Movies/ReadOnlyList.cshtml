
@model IEnumerable<Vidly101.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>



<table class="table table-bordered table-hover" id="movies">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>



@section scripts
    {
    <script>
        $(document).ready(function () {
            //jQuery for list
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    //MembershipType but we removed it from CustomersDto
                    {
                        data: "genre.name"
                    }

                ]
            });

            
        });
    </script>
}

